<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragmentsAggiungiPercorso.FragmentRicercaSiti">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSiti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editCercaSitoCitta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCercaSitoCitta" />

    <EditText
        android:id="@+id/editCercaSitoCitta"
        android:layout_width="351dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:ems="10"
        android:hint="@string/searchSites"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/CapiToolStyle"/>
</RelativeLayout>