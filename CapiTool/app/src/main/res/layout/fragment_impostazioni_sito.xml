        android:id="@+id/button_elimina_sito"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintBottom_toBottomOf="@+id/text_elimina_sito"
        app:layout_constraintEnd_toEndOf="@+id/text_elimina_sito" />-->

    <ImageView
        android:id="@+id/image_elimina_sito"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:src="@drawable/ic_outline_delete_24"
        app:layout_constraintBottom_toBottomOf="@+id/text_elimina_sito"
        app:layout_constraintStart_toStartOf="@+id/text_elimina_sito" />


</androidx.constraintlayout.widget.ConstraintLayout>