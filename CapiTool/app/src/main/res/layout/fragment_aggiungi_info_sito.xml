<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragmentsAggiungiInfoSito.AggiungiInfoSito">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/CostoIngresso"
            android:layout_width="130dp"
            android:layout_height="54dp"
            android:layout_marginTop="47dp"
            android:ems="10"
            android:hint="Costo Ingresso"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.249"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OrarioApertura" />

        <EditText
            android:id="@+id/OrarioChiusura"
            android:layout_width="130dp"
            android:layout_height="54dp"
            android:layout_marginTop="42dp"
            android:ems="10"
            android:hint="Orario Chiusura"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Indirizzo" />

        <EditText
            android:id="@+id/OrarioApertura"
            android:layout_width="130dp"
            android:layout_height="54dp"
            android:layout_marginTop="42dp"
            android:ems="10"
            android:hint="Orario Apertura"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Indirizzo" />

        <EditText
            android:id="@+id/Città"
            android:layout_width="269dp"
            android:layout_height="50dp"
            android:layout_marginTop="73dp"
            android:ems="10"
            android:hint="Città"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Indirizzo"
            android:layout_width="269dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="Indirizzo"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Città" />

        <Button
            android:id="@+id/btnConferma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="165dp"
            android:text="Conferma"
            android:background="@drawable/rounded_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>