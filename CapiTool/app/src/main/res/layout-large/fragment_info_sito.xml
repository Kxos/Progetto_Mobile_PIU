<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragmentsMioSito.FragmentInfoSito">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="0dp"
            tools:layout_editor_absoluteY="1dp">


            <ImageView
                android:id="@+id/immagineSito2"
                android:layout_width="715dp"
                android:layout_height="374dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/constraintLayout"
            android:layout_marginTop="142dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="713dp"
                android:layout_height="1027dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/Via"
                    android:layout_width="310dp"
                    android:layout_height="34dp"
                    android:text="Via del Sito"
                    android:textColor="#000"
                    android:textSize="35sp"
                    tools:layout_editor_absoluteX="37dp"
                    tools:layout_editor_absoluteY="334dp" />

                <TextView
                    android:id="@+id/Orario"
                    android:layout_width="333dp"
                    android:layout_height="31dp"
                    android:text="Orario Sito"
                    android:textColor="#000"
                    android:textSize="35sp"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="499dp" />

                <TextView
                    android:id="@+id/textViewZoneOpere"
                    android:layout_width="431dp"
                    android:layout_height="48dp"
                    android:text="Visualizza Zone e Opere >"
                    android:textColor="#000"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="833dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="103dp"
                    android:layout_height="21dp"
                    android:text="Orari"
                    android:textColor="#000"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="478dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="161dp"
                    android:layout_height="41dp"
                    android:text="Costo Ingresso"
                    android:textColor="#000"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="687dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="163dp"
                    android:layout_height="28dp"
                    android:text="Indirizzo"
                    android:textColor="#000"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="37dp"
                    tools:layout_editor_absoluteY="306dp" />

                <TextView
                    android:id="@+id/Costo"
                    android:layout_width="349dp"
                    android:layout_height="58dp"
                    android:text="Costo Ingresso"
                    android:textColor="#000"
                    android:textSize="35sp"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="728dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/buttonEditSito"
                    android:layout_width="90dp"
                    android:layout_height="98dp"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    app:backgroundTint="#EC5424"
                    app:srcCompat="@drawable/ic_edit"
                    tools:layout_editor_absoluteX="567dp"
                    tools:layout_editor_absoluteY="872dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <TextView
            android:id="@+id/titoloNomeSito"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#90000000"
            android:padding="8dp"
            android:text="MIOSITO"
            android:textColor="#FFF"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>